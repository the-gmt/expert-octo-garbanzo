<script>
  // Hamburger
  const hamburger  = document.getElementById('hamburger');
  const mobileMenu = document.getElementById('mobile-menu');
  hamburger.addEventListener('click', () => { hamburger.classList.toggle('open'); mobileMenu.classList.toggle('open'); });
  document.addEventListener('click', e => {
    if (!hamburger.contains(e.target) && !mobileMenu.contains(e.target)) {
      hamburger.classList.remove('open'); mobileMenu.classList.remove('open');
    }
  });

  // Step accordion
  document.querySelectorAll('.step-header').forEach(header => {
    header.addEventListener('click', () => {
      const block = header.closest('.step-block');
      const isOpen = block.classList.contains('open');
      document.querySelectorAll('.step-block').forEach(b => b.classList.remove('open'));
      if (!isOpen) block.classList.add('open');
    });
  });

  // Checkboxes
  document.querySelectorAll('.action-check').forEach(box => {
    box.addEventListener('click', () => box.classList.toggle('checked'));
  });
</script>
</body>
